<BaseLayout title="Software" sideBarActiveItemID="software">

    <div>
        <div class="mt-6 text-3xl w-full font-bold mb-5">Software, Models & Dataset</div>
    </div>

    <div class="flex flex-wrap gap-4 justify-center">
        <div class="card w-96 bg-base-100 shadow-xl">
            <figure class="px-5 pt-5">
                <img src="/Voice2Picto.png" alt="Voice2Picto" class="Voice2Picto"/>
            </figure>
            <div class="card-body items-center justify-end">
                <h2 class="card-title text-2xl">Voice2Picto</h2>
                <p class="text-lg mb-4">App which directly translates speech into a sequence of pictograms.</p>
                <div class="card-actions">
                    <button class="btn btn-secondary mb-2">
                        <a target="_blank" href="https://github.com/macairececile/Voice2Picto">Link</a>
                    </button>
                </div>
            </div>
        </div>

